    <section name="quote">
        <group name="totals">
            <item name="sfm_bundle_adjustment" instance="ShoppingFeed\Manager\Model\Sales\Quote\Address\Total\BundleAdjustment" sort_order="225"/>
            <item name="sfm_bundle_adjustment_tax" instance="ShoppingFeed\Manager\Model\Sales\Quote\Address\Total\BundleAdjustmentTax" sort_order="460"/>
            <item name="sfm_marketplace_fees" instance="ShoppingFeed\Manager\Model\Sales\Quote\Address\Total\MarketplaceFees" sort_order="500"/>
        </group>
    </section>

    <section name="order_invoice">
        <group name="totals">
            <item name="sfm_bundle_adjustment" instance="ShoppingFeed\Manager\Model\Sales\Invoice\Total\BundleAdjustment" sort_order="600"/>
            <item name="sfm_marketplace_fees" instance="ShoppingFeed\Manager\Model\Sales\Invoice\Total\MarketplaceFees" sort_order="500"/>
        </group>
    </section>

    <section name="order_creditmemo">
        <group name="totals">
            <item name="sfm_bundle_adjustment" instance="ShoppingFeed\Manager\Model\Sales\Creditmemo\Total\BundleAdjustment" sort_order="100"/>
        </group>
